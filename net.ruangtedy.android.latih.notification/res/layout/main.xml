<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimpleNotificationActivity" >

    <Button
        android:id="@+id/notify1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify1_text" />

    <Button
        android:id="@+id/notify2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify2_vibrate" />

    <Button
        android:id="@+id/notify3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify3_led" />

    <Button
        android:id="@+id/notify4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify4_noise" />

    <Button
        android:id="@+id/notifyRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify_remoteview" />

    <Button
        android:id="@+id/notifyNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify_api_level11" />

</LinearLayout>